<style>
  @import url('https://fonts.googleapis.com/css2?family=Tilt+Neon&display=swap');
  @import url('https://fonts.googleapis.com/css2?family=Tilt+Warp&display=swap');

  .container-failed {
    background-color: rgba(44,81,132,255);
    border-radius: 1rem;
    border: 4px solid #F8D99B;
    padding: 50px;
    margin:0px 476px;
    font-family: 'Tilt Neon', cursive;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center; 
    margin: 50px 500px;
  }

  .payment-failed {
    display: inline-block; 
    vertical-align: top;
    margin-right: 20px; 
    color: #F8D99B;
  }

  .container-failed img {
    height: 200px;
    border-radius: 2rem;
  }

  #btnhome{
    font-family: 'Tilt Neon', cursive;
    background-color:rgba(44,81,132,255);
    color: rgba(44,81,132,255);
    border: 2px solid  #F8D99B;
    color:  #F8D99B;
    
    display: block;
    margin: auto;
  }
  #btnhome:hover{
    background-color:rgba(26, 60, 109, 1);
    color: antiquewhite;
    border: 2px solid   #F8D99B;
    transition: all ease-in-out .8s;
  }
  .container-failed p{
    font-size: 20px;
  }
  .container-failed a{
    margin: 0;
    justify-content: center;
  }
</style>

<%- include("header")%>

  <div class="container-failed">
    <div class="payment-failed">
      <h1 style="color: #F8D99B;font-family: 'Tilt Neon', cursive; ">Payment Failed</h1>
    <img src="assets/img/fail.png" alt="">
      <p><%= typeof message !== 'undefined' ? message : '' %></p>
      <p>Your Payment Failed! Sorry for the inconvenience .</p>
      <a href="/customerlist"><button id="btnhome">Go Back to Customers</button></a>
    </div>    
  </div>

  <%- include ("footer")%>