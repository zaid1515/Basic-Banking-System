
<style>
  /* Form Container */
  @import url('https://fonts.googleapis.com/css2?family=Tilt+Neon&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=Tilt+Warp&display=swap');

    .marging {

      font-family: 'Tilt Neon', cursive;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 480px;
      color: white;
    }

    .marging::before {
      content: "";
      position: absolute;
      background: url('assets/img/trans.avif') center center/cover;
      height: 716px;
      margin-top: 70px;
      top: 0px;
      left: 0px;
      width: 100%;
      z-index: -1;
      /* opacity:0.9 ; */
    }

.marging {
  text-align: center;
  margin: 50px auto;
}

/* Form Styling */
.form {
  background-color: rgba(44,81,132,255);
  border-radius: 1rem;
  border: 4px solid sandybrown;
  padding: 50px;
  margin:0px 476px;
}

/* Dropdown Styling */
.form--input {
  width: 100%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  margin-top: 10px;
  
  font-size: 16px;
  background-color: #fff;
  transition: border-color 0.3s, box-shadow 0.3s;
  border-color: #ccc;
  box-shadow: none;
}

.form--input:focus {
  border-color: #F8D99B;
  border: 2px solid;
  
  box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
}

/* Hover Effect for Dropdowns */
.form--input:hover {
  background-color: #f5f5f5;
  border: #ccc;
}

/* Submit Button Styling */
.form--submit {
  background-color: #007BFF;
  color: #fff;
  padding: 10px 20px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  font-size: 18px;
  margin-top: 15px;
  transition: background-color 0.3s;
}

.form--submit:hover {
  background-color: #0056b3;
}
#btnhome{
  font-family: 'Tilt Neon', cursive;
  background-color:rgba(44,81,132,255);
  color: rgba(44,81,132,255);
  border: 2px solid  #F8D99B;
  color:  #F8D99B;
}
#btnhome:hover{
  background-color:rgba(26, 60, 109, 1);
  color: antiquewhite;
  border: 2px solid   #F8D99B;
  transition: all ease-in-out .8s;
}
img{
  height: 80px;
}
.d-flex{
  display: flex;
}
</style>
<%- include("header")%>

<center class="marging">
  <form action="/customerlist" method="post" class="form">
    <div class="d-flex">
      <span class="signup"><h1 style="color: #F8D99B;font-family: 'Tilt Neon', cursive;">  &nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Money </h1></span>
      <img src="assets/img/money.png" alt="">
      <span class="signup"><h1 style="color: #F8D99B;font-family: 'Tilt Neon', cursive;">Transfer</h1></span>
    </div>
    <p><%message%></p>
    <select class="form--input" id="first-select" name="sender" onchange="updateSecondSelect()" required>
      <option value="">Sender</option>
      <%customers.forEach(function(customer){%>
        <option value="<%=customer.name%>"><%=customer.name%></option>
      <%})%>
    </select>
    <select class="form--input" id="second-select" name="receiver" required>
      <option value="">Receiver</option>
      <%customers.forEach(function(customer){%>
        <option value="<%=customer.name%>"><%=customer.name%></option>
      <%})%>
    </select>
    <input type="number" placeholder="Amount" class="form--input" name="amount" required>
    
     
      <input id="btnhome" type="submit" class="form--submit" value="Transfer!">
   
  </form>
</center>

<%- include("footer")%>
