<body>
  <header id="header" class="fixed-top d-flex align-items-center">
      <div class="logo" >
       <img src="assets/img/mainlogo.png" alt="SwissBank Logo">
      </div>      
      <div id="navbar" class="navbar">
 

      
        <ul>
          <li><a class="" href="/">Home</a></li>
          <li><a class="" href="/customerlist">Customers</a></li>
          <li><a class="" href="/payment">Money Transfer</a></li>
          <li><a class="" href="/transaction">Transactions</a></li>
        </ul>

        <i class="bi bi-list mobile-nav-toggle"></i>
        <div class="search-box">
          <button style="    padding: 0.7em 1.8em;"class="btn-search"><i class="ri-search-line"></i></button>
          <input type="text" class="input-search" placeholder="Type to Search...">
        </div>
      
      </div>

  </header>
</body>
