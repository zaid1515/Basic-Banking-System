<style>
  @import url('https://fonts.googleapis.com/css2?family=Tilt+Neon&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Tilt+Warp&display=swap');

  body{
    
    font-family: 'Tilt Neon', cursive;
  }

  #header {
    position: sticky;
    background-color: rgba(44, 81, 132, 255);
    display: flex;
  /*  justify-content: space-between;*/
    align-items: center; 
    margin: 0;
    padding: 0;
    margin-top: -8px;
    margin-left: -8px;
    margin-right: -8px;
    padding: 20px 46px;
  }
  
  .logo {
    display: flex; 
  /*  align-items: center; */
    margin-right: 10px;
  }
  
  .logo > img {
    height: 50px;
    border: 2.5px solid #F8D99B;
  }
  .navbar {
    margin-left: 50px;
    display: flex; 
  /*  align-items: center; */
  }
  
  .navbar ul {
    list-style: none; 
    margin: 0;
    padding: 0;
    display: flex; 
  }
  .navbar a{
    font-size: larger;
    border: 2px solid rgba(44,81,132,255) ;
    border: 2px solid rgba(44,81,132,255) ;
    border-radius: 8px;
    color:#F8D99B;
    margin: 0;
    padding: 9px 16px 9px 16px;
   
  }
  .navbar li{
    margin-left: 18px;
    margin-right:18px;
  }
  .navbar{
    margin-left: 50px;
  }
  
  .navbar li a{
    background-color: #F8D99B;
    color: rgba(44,81,132,255);
    font-size: 130%;
  }
  .navbar a:hover {
    background-color:rgba(44,81,132,255);
     transition: background-color 0.8s ease;
  }
  .search-box{
    width: fit-content;
    height: fit-content;
    position: relative;
    margin-left: 20px;
  }
  .input-search{
    height: 32px;
    width: 0px;
    border-style: none;
    padding: 10px;
    font-size: 18px;
    letter-spacing: 2px;
    outline: none;
    border-radius: 25px;
    transition: all .5s ease-in-out;
    background-color: #22a6b3;
    padding-right: 40px;
    color:#fff;
  }
  .input-search::placeholder{
    color:rgba(255,255,255,.5);
    font-size: 18px;
    letter-spacing: 2px;
    font-weight: 100;
  }
  .btn-search{
    width: 50px;
    height: 50px;
    border-style: none;
    font-size: 20px;
    font-weight: bold;
    outline: none;
    cursor: pointer;
    border-radius: 50%;
    position: absolute;
    right: 0px;
    color:#ffffff ;
    background-color:transparent;
    pointer-events: painted;  
  }
  .btn-search:focus ~ .input-search{
    width: 200px;
    border-radius: 0px;
    background-color: transparent;
    border-bottom:1px solid rgba(255,255,255,.5);
    transition: all 500ms cubic-bezier(0, 0.110, 0.35, 2);
  }
  .input-search:focus{
    width: 250px;
    border-radius: 0px;
    background-color: transparent;
    border-bottom:1px solid rgba(255,255,255,.5);
    transition: all 500ms cubic-bezier(0, 0.110, 0.35, 2);
  }
  
  
  .ri-search-line{
    font-size: larger;
    margin-right: 100px;
  }

</style>
